{% macro inpfield(attr) %}

	{% set field_name = "sample+new+0+"+attr.name %}

	{% if attr.type_.value == "text" %}
		<input type="text" name="{{ field_name }}" >
	{% elif attr.type_.value == "date" %}
		<input type="date" name="{{ field_name }}">
	{% elif attr.type_.value == "select" %}
		<select name="{{ field_name }}">
			{% for opt in attr.options %}
				<option value="{{ opt }}">{{ opt }}</option>
			{% endfor %}
		</select>
	{% endif %}

{% endmacro %}




{% macro editall(attr) %}

	{% set field_name = "sample+editall+"+attr.name %}

	{% if attr.type_.value == "text" %}
		<input type="text" name="{{ field_name }}" onchange="editAll(this);">
	{% elif attr.type_.value == "date" %}
		<input type="date" name="{{ field_name }}" onchange="editAll(this);">
	{% elif attr.type_.value == "select" %}
		<select name="{{ field_name }}" onchange="editAll(this);">
			{% for opt in attr.options %}
				<option value="{{ opt }}">{{ opt }}</option>
			{% endfor %}
		</select>
	{% endif %}


{% endmacro %}
