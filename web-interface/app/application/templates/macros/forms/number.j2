{% macro inpnumber(dets, type="single") %}

{% set min="min='"+dets.min_val|string+"'" 
	if dets.min_val != "" else "" %}
{% set max="max='"+dets.max_val|string+"'" 
	if dets.max_val != "" else "" %}
{% set onchangefunc="onchange='"+dets.onchange+"'" 
	if dets.onchange != "" else "" %}

{% set name = "" %}
{% if type == "single" %}
	{% set name = dets.name_single %}
{% elif type == "multi_all" %}
	{% set name = dets.multi_all %}
{% elif type == "multi_template" %}
	{% set name = dets.multi_template %}
{% elif type == "defaults" %}
	{% set name = dets.db_key %}
{% endif %}

<input type="number"
			 name="{{ name }}"
			 step="{{ dets.step }}"
			 	class="{{ dets.classes|join(" ") }}"
				value="{{ dets.value }}"
				{{ min }} 
				{{ max }} 
				{{ onchangefunc }}/>


{% endmacro %}
