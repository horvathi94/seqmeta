{% macro inpdate(dets, type="single") %}

{% set minval="min='"+dets.min|string+"'" 
	if dets.min != "" else "" %}
{% set maxval="max='"+dets.max|string+"'" 
	if dets.max != "" else "" %}
{% set onhangefunc="onchange='"+dets.onchange+"'" 
	if dets.onchange else "" %}

{% set name = "" %}
{% if type == "single" %}
	{% set name = dets.name_single %}
{% endif %}

<input type="date"
			 name="{{ name }}"
			 	class="{{ dets.class }}"
				value="{{ dets.value }}"
				{{ minval }} 
				{{ maxval }} 
				{{ dets.onchangefunc }}/>


{% endmacro %}
